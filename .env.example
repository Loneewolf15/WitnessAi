# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=gemini  # gemini | anthropic | mock

# Vision Agents / Stream SDK
STREAM_API_KEY=your_stream_api_key_here
STREAM_API_SECRET=your_stream_api_secret_here

# Detection Configuration
YOLO_MODEL=yolov8n.pt  # nano for speed; yolov8s.pt for better accuracy
CONFIDENCE_THRESHOLD=0.5
FRAME_SKIP=2  # Process every Nth frame

# Anomaly Detection Thresholds
LOITERING_THRESHOLD_SECONDS=30
RUNNING_VELOCITY_THRESHOLD=150  # pixels/second
CROWD_DENSITY_THRESHOLD=8       # persons per frame
OBJECT_ABANDONMENT_SECONDS=20

# Evidence Buffer
BUFFER_DURATION_SECONDS=30
EVIDENCE_OUTPUT_DIR=./evidence_packages

# Database
DATABASE_URL=sqlite+aiosqlite:///./witnessai.db

# API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
